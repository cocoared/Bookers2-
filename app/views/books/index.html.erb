<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h4><strong>ユーザー</strong></h4>
      <%= render 'users/info', user: @user %>
      <%= render 'form', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h4><strong>書籍一覧</strong></h4>
      <table class="table">
        <thead>
          <tr>
            <th>タイトル</th>
            <th>感想</th>
            <th>投稿ユーザー</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
            <td><%= link_to book.user.name, user_path(book.user_id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    </div>
  </div>
</div>

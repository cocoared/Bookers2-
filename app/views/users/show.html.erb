<div class="container">
  <div class="row">
    <div class="col-3">
      <h4><strong>ユーザー情報</strong></h4>
      <%= render 'info', user: @user %><br>
      <%= render 'books/form', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h4><strong>投稿した書籍</strong></h4>
      <table class="table">
        <thead>
          <tr>
            <th>投稿者</th>
            <th>タイトル</th>
            <th>感想</th>
            <th colspan= "3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user_id) do %>
                  <%= image_tag book.user.get_profile_image(40, 40) %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              <td colspan="3"></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
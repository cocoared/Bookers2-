  <table class="table">
    <tr><%= image_tag user.get_profile_image(100, 100) %></tr>
    <tr>
      <th>名前</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>紹介文</th>
      <th><%= user.introduction %></th>
    </tr>
  </table>
  <% if user.id == current_user.id %>
  <div class="row">
    <%= link_to edit_user_path(user), class:"btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div><br>
  <% end %>

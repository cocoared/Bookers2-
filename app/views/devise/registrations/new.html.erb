
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>新規登録</h2>
      <%#= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= form_with model: @user, url: user_registration_path do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :名前 %><br>
          <%= f.text_field :name, autofocus: true, autocomplete: "名前" %>
        </div>

        <div class="field">
          <%= f.label :Eメール %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "Eメール" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "パスワード" %>
        </div>

        <div class="field">
          <%= f.label :パスワード（確認）%><br />
          <%= f.password_field :password_confirmation, autocomplete: "パスワード" %>
        </div><br>

        <div class="actions">
          <%= f.submit "新規登録" , class: "btn btn-success" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>